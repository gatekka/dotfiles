# If you come from bash you might have to change your $PATH.
export PATH=$HOME/bin:$HOME/.local/bin:/usr/local/bin:$PATH

{{ if .neovim -}}
# Path to Neovim
export PATH="$HOME/.local/opt/nvim/bin:$PATH"
{{- end }}

# Mise activation
eval "$(mise activate zsh)"

# Bitwarden SSH agent
if [ -z "$SSH_CONNECTION" ]; then
  export SSH_AUTH_SOCK="$HOME/.bitwarden-ssh-agent.sock"
fi

# Set the base directory for user configuration files (XDG standard)
export XDG_CONFIG_HOME="$HOME/.config"

{{ if .ohmyzsh -}}

# Path to your Oh My Zsh installation.
export ZSH="$HOME/.oh-my-zsh"
plugins=(fzf-tab starship zoxide zsh-autosuggestions)
# ZOXIDE_CMD_OVERRIDE="cd"
source $ZSH/oh-my-zsh.sh

{{- end }}

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR='nvim'
fi

# Aliases (for a full list of active aliases, run `alias`)
alias zshconfig="nvim ~/.zshrc"
alias kittyconfig="nvim ~/.config/kitty/kitty.conf"
alias nvimconfig="nvim ~/.config/nvim"
alias ls="ls --color -A"
{{- if .bat }}
alias cat="bat"
{{- end}}
alias e="nvim"
alias f="fzf --height=50% --layout=reverse --border=rounded"
alias fe='f=$(f) && [ -n "$f" ] && e "$f"'
alias cdf='cd "$(fd --hidden --no-ignore -t d | fzf)"'
alias cdie='cdi && e .'
alias lg="lazygit"
alias cbonsaiPreset='cbonsai -li -L 50 -t 0.003 -w 2'
