  "reload_style_on_change": false,
  "modules-left": ["hyprland/workspaces", "hyprland/mode", "hyprland/window"],
  "modules-center": ["clock", "custom/cava"],
  "modules-right": [
    "mpris",
    "pulseaudio",
    "tray",
    "battery",
    "group/hardware",
    "group/power",
