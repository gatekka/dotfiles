{
  "layer": "top",
  "modules-left": [
    "hyprland/workspaces",
    "hyprland/mode",
    "hyprland/window"
  ],
  // "modules-center": [],
  "modules-right": [
    "cpu",
    "pulseaudio",
    "battery",
    "clock"
  ],
  "hyprland/workspaces": {
    "show-special": true
  },
  "hyprland/window": {
    "max-length": 50
  },
  "pulseaudio": {
    "format": "Volume:{volume}%"
  },
  "battery": {
    "format": "{capacity}% {icon}",
    "format-icons": [
      "",
      "",
      "",
      "",
      ""
    ]
  },
  "clock": {
    "interval": 1,
    "format": "{:%I:%M:%S %p}",
    "format-alt": "{:%a, %d. %b  %H:%M}",
    "tooltip": false
  },
  "cpu": {
    "format": "CPU:{usage}%"
  }
}
