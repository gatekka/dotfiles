{{ $choices := list "Oh My Zsh" "bat" "delta" "fzf" "lazygit" "neovim" "starship" "zoxide" -}}
{{ $tools := promptMultichoice "What tools do you want to download" $choices (list) -}}
{{ $name := promptStringOnce . "name" "What is your name" -}}
{{ $email := promptStringOnce . "email" "What is your email address" -}}
{{ $signingkey := promptStringOnce . "git.signingkey" "Enter your public signing key for Git" -}}
{{ $hyprland := false -}}
{{ if eq .chezmoi.os "linux" -}}
  {{ $hyprland = promptBoolOnce . "includeHyprlandFiles" "Include Hyprland related dotfiles? Y/N" -}}
{{ end }}
[git]
autoCommit = false

[diff]
pager = "delta"

[data]
name = {{ $name | quote }}
email = {{ $email | quote }}
git.signingkey = {{ $signingkey | quote }}
includeHyprlandFiles = {{ $hyprland }}
tools = {{ $tools | toToml }}
ohmyzsh = {{ has "Oh My Zsh" $tools }}
bat = {{ has "bat" $tools }}
delta = {{ has "delta" $tools }}
fzf = {{ has "fzf" $tools }}
lazygit = {{ has "lazygit" $tools }}
neovim = {{ has "neovim" $tools }}
starship = {{ has "starship" $tools }}
zoxide = {{ has "zoxide" $tools }}
